{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"version": "1.0",

	"description": "__MSG_extensionDescription__",
	"homepage_url": "https://github.com/muriloportugal/FirefoxExtensions",
	
	"icons":{
		"48": "icons/deluge-48.png"
	},

	"permissions": [
		"contextMenus",
		"<all_urls>",
		"activeTab",
		"tabs",
		"storage"
	],

	"options_ui":{
		"page": "options/options.html"
	},

	"background": {
		"scripts":["background.js"]
	},

	"default_locale": "en"
}